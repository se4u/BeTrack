<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.app.uni.betrack.ActivityBeTrack">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Layout_Disclaimer"
        android:visibility="visible">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/disclaimer_title"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="3"
                android:textSize="30sp"
                android:textColor="#000"
                android:text="@string/disclaimer_title"
                />
            <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:fillViewport="true"
                android:scrollbars = "vertical"
                android:scrollbarStyle="insideInset"
                android:paddingLeft="10dp"
                >
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="left"
                        android:id="@+id/disclaimers"
                        android:text="@string/disclaimer"/>
            </ScrollView>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"

                android:paddingTop="10dp"
                android:layout_weight="3">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textColor="#FFF"
                    android:text="@string/disclaimer_accept"
                    android:onClick="onButtonClickedChoice1"
                    android:background="@drawable/button_custom"
                    android:textStyle="bold"
                    android:id="@+id/DisclaimerChoice1">
                </Button>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/DisclaimerChoice1"
                    android:layout_margin="10dp"
                    android:textColor="#FFF"
                    android:text="@string/disclaimer_cancel"
                    android:onClick="onButtonClickedChoice2"
                    android:background="@drawable/button_custom"
                    android:textStyle="bold"
                    android:id="@+id/DisclaimerChoice2">
                </Button>
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Layout_StudyDescription"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:visibility="invisible">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/study_title"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="3"
                android:textSize="30sp"
                android:textColor="#000"
                android:text="@string/study_title"
                />
            <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:fillViewport="true"
                android:scrollbars = "vertical"
                android:scrollbarStyle="insideInset"
                android:paddingLeft="10dp"
                >
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="left"
                    android:id="@+id/study_description"
                    android:text="@string/study_description"/>
            </ScrollView>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:layout_weight="3">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textColor="#FFF"
                    android:text="@string/study_accept"
                    android:onClick="onButtonClickedChoice1"
                    android:background="@drawable/button_custom"
                    android:textStyle="bold"
                    android:id="@+id/StudyChoice1">
                </Button>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/StudyChoice1"
                    android:layout_margin="10dp"
                    android:textColor="#FFF"
                    android:text="@string/study_cancel"
                    android:onClick="onButtonClickedChoice2"
                    android:background="@drawable/button_custom"
                    android:textStyle="bold"
                    android:id="@+id/StudyChoice2">
                </Button>
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Layout_NetworkError"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:visibility="invisible">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="right|top"
            android:visibility="visible">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_weight="3"
                android:text="@string/network_error_title"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scrollbars = "vertical"
                android:gravity="left"
                android:layout_marginTop="30sp"
                android:layout_weight="1"
                android:id="@+id/network_error_text"
                android:text="@string/network_error_text"/>

            <!-- Status EditText -->

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:layout_weight="3"
                android:textColor="#FFF"
                android:text="@string/network_retry"
                android:onClick="onButtonClicked"
                android:background="@drawable/button_custom"
                android:textStyle="bold"
                android:id="@+id/ButtonNetwork">
            </Button>

        </LinearLayout>
    </FrameLayout>

</RelativeLayout>
